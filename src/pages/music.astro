---

<Base title="Music | Kesem Records">
  <section class="music">
    <h1>Music</h1>
    <div class="divider"></div>

    <div class="section">
      <h2>Featured Tracks</h2>
      <div class="tracks">
        {featured.map((track) => (
          <div class="track">
            <div class="track-header">
              <a href={`https://www.youtube.com/watch?v=${track.youtubeId}`} target="_blank" rel="noopener noreferrer" class="track-title">{track.title}</a>
              {track.feat && <span class="track-feat">{track.feat}</span>}
            </div>
            <span class="track-stats">{track.stats}</span>
          </div>
        ))}
      </div>
    </div>

    <div class="section">
      <h2>Discography</h2>
      <p class="section-note">
        13 albums released on
        <a href="https://artlist.io/royalty-free-music/artist/dogbeat/1570" target="_blank" rel="noopener noreferrer">Artlist</a>
        &mdash; available for licensing worldwide.
      </p>
      <div class="albums-grid">
        {albums.map((album) => (
          <div class="album">
            {album.youtubeList ? (
              <a href={`https://www.youtube.com/playlist?list=${album.youtubeList}`} target="_blank" rel="noopener noreferrer" class="album-title">{album.title}</a>
            ) : (
              <span class="album-title">{album.title}</span>
            )}
            <span class="album-style">{album.style}</span>
            {album.year && <span class="album-year">{album.year}</span>}
          </div>
        ))}
      </div>
    </div>

    <div class="section">
      <h2>Remixes</h2>
      <p class="section-note">
        Classical compositions reimagined through electronic production.
      </p>
      <div class="remix-list">
        {remixes.map((remix) => (
          <div class="remix">
            <a href={`https://www.youtube.com/watch?v=${remix.youtubeId}`} target="_blank" rel="noopener noreferrer" class="remix-title">{remix.title}</a>
            <span class="remix-feat">{remix.feat}</span>
            <span class="remix-genre">{remix.genre}</span>
          </div>
        ))}
      </div>
    </div>

    <div class="section">
      <h2>Collaborations</h2>
      <div class="credits-list">
        {collaborations.map((collab) => (
          <div class="credit">
            <h3>
              {collab.link ? (
                <a href={collab.link} target="_blank" rel="noopener noreferrer">{collab.artist}</a>
              ) : (
                collab.artist
              )}
              {collab.youtubeId && (
                <a href={`https://www.youtube.com/watch?v=${collab.youtubeId}`} target="_blank" rel="noopener noreferrer" class="yt-badge" title="Watch on YouTube">▶</a>
              )}
            </h3>
            <div class="credit-details">
              <div class="detail">
                <span class="label">Role</span>
                <span class="value">{collab.role}</span>
              </div>
              {collab.works && (
                <div class="detail">
                  <span class="label">Works</span>
                  <span class="value">
                    {collab.youtubeId ? (
                      <a href={`https://www.youtube.com/watch?v=${collab.youtubeId}`} target="_blank" rel="noopener noreferrer">{collab.works}</a>
                    ) : (
                      collab.works
                    )}
                  </span>
                </div>
              )}
              {collab.tracks && (
                <div class="detail detail-full">
                  <span class="label">Tracks</span>
                  <span class="value tracks-list">
                    {collab.tracks.map((track, i) => (
                      <>
                        <a href={`https://www.youtube.com/watch?v=${track.youtubeId}`} target="_blank" rel="noopener noreferrer">{track.name}</a>
                        {i < collab.tracks.length - 1 && <span class="track-sep">&nbsp;&middot;&nbsp;</span>}
                      </>
                    ))}
                  </span>
                </div>
              )}
              {collab.label && (
                <div class="detail">
                  <span class="label">Label</span>
                  <span class="value">{collab.label}</span>
                </div>
              )}
              {collab.conductor && (
                <div class="detail">
                  <span class="label">Conductor</span>
                  <span class="value">{collab.conductor}</span>
                </div>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>

    <div class="section">
      <h2>Theater & Television</h2>
      <div class="credits-list">
        {theater.map((item) => (
          <div class="credit">
            <div class="credit-header">
              <h3>
                {item.link ? (
                  <a href={item.link} target="_blank" rel="noopener noreferrer">{item.title}</a>
                ) : (
                  item.title
                )}
              </h3>
              {item.year && <span class="year">{item.year}</span>}
            </div>
            <div class="credit-details">
              <div class="detail">
                <span class="label">Role</span>
                <span class="value">{item.role}</span>
              </div>
              <div class="detail">
                <span class="label">{item.type === 'TV Series' ? 'Network' : item.type === 'Film' ? 'Format' : 'Venue'}</span>
                <span class="value">{item.venue}</span>
              </div>
              {item.collaborator && (
                <div class="detail">
                  <span class="label">With</span>
                  <span class="value">{item.collaborator}</span>
                </div>
              )}
              {item.director && (
                <div class="detail">
                  <span class="label">Director</span>
                  <span class="value">{item.director}</span>
                </div>
              )}
              {item.writer && (
                <div class="detail">
                  <span class="label">Writer</span>
                  <span class="value">{item.writer}</span>
                </div>
              )}
              {item.actor && (
                <div class="detail">
                  <span class="label">Performer</span>
                  <span class="value">{item.actor}</span>
                </div>
              )}
              {item.performances && (
                <div class="detail">
                  <span class="label">Run</span>
                  <span class="value">{item.performances}</span>
                </div>
              )}
            </div>
            {item.link && (
              <a href={item.link} target="_blank" rel="noopener noreferrer" class="credit-link">
                view production &rarr;
              </a>
            )}
          </div>
        ))}
      </div>
    </div>

    <div class="section listen-cta">
      <h2>Listen</h2>
      <div class="listen-links">
        <a href="https://open.spotify.com/artist/2IXn2t9xdU4FNiy394DBP4" target="_blank" rel="noopener noreferrer">Spotify</a>
        <a href="https://www.youtube.com/@DoGBeaT77" target="_blank" rel="noopener noreferrer">YouTube</a>
        <a href="https://soundcloud.com/avi-tuchman" target="_blank" rel="noopener noreferrer">SoundCloud</a>
        <a href="https://artlist.io/royalty-free-music/artist/dogbeat/1570" target="_blank" rel="noopener noreferrer">Artlist</a>
      </div>
    </div>
  </section>
</Base>

