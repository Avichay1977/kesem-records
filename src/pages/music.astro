  { title: 'Beat of Opera', style: 'Uplifting Dramatic Electronic', year: '2024', youtubeList: 'OLAK5uy_kSoUHYwYWN1YT3knefjDKBGzfkM5Qt-Hw' },
  { title: 'Satie (Arr. for Cello)', style: 'Electronic Reggae', year: '2024', youtubeList: 'OLAK5uy_mHioK6xtzf7VV3a_2VjCLB78n8I5rEKy8' },
  { title: 'Rash', style: 'Funky Rock', year: '2023' },
  { title: 'Swamp It Up', style: 'Thrilling Punk Rock', year: '2023' },
