  artist: 'Noa Faran & DoGBeaT',
  artistHe: 'נועה פארן ואביחי טוכמן',
  label: 'Universal Music Group',
  tracks: [
    { name: 'Mikre Avud (מקרה אבוד)', youtubeId: 'rqFYO72tGAM' },
    { name: 'Esh Kara (אש קרה)', youtubeId: 'mee8Wbkkz0g' },
    { name: 'Relocation (רילוקיישן)', youtubeId: 'x2Hnau8S8_M' },
