  { artist: 'Shuli Rand', artistHe: 'שולי רנד', work: 'Mishenitnah HaReshut (משניתנה הרשות)', role: 'Arrangement & Production', youtubeId: 'XVO2ubqcDVU' },
  { artist: 'Sofi Tsedaka', artistHe: 'סופי צדקה', work: 'Or Shel Kochavim (אור של כוכבים)', role: 'Arrangement & Production', youtubeId: 'dBdmci7WtUw' },
  { artist: 'Shai Lahav', artistHe: 'שי להב', work: 'Tamid HaKochavim (תמיד הכוכבים)', role: 'Arrangement, Performance & Production', youtubeId: 'TZQksnr9ofs' },
