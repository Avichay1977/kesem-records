---
import Base from '../layouts/Base.astro';
import about from '../data/about.json';
---

<Base title="About | Kesem Records">
  <section class="about">
    <h1 data-editable data-file="about" data-path="pageTitle">{about.pageTitle}</h1>
    <div class="divider"></div>

    <div class="content">
      <p data-editable data-file="about" data-path="intro">
        {about.intro}
      </p>

      <h2 data-editable data-file="about" data-path="bio.title">{about.bio.title}</h2>
      {about.bio.paragraphs.map((p, i) => (
        <p data-editable data-file="about" data-path={`bio.paragraphs[${i}]`} data-html="true" set:html={p} />
      ))}

      <h2 data-editable data-file="about" data-path="whatWeDo.title">{about.whatWeDo.title}</h2>
      <p data-editable data-file="about" data-path="whatWeDo.text">
        {about.whatWeDo.text}
      </p>

      <h2 data-editable data-file="about" data-path="approach.title">{about.approach.title}</h2>
      <p data-editable data-file="about" data-path="approach.text">
        {about.approach.text}
      </p>

      <h2>Genres</h2>
      <div class="genres">
        {about.genres.map((genre) => (
          <span class="genre">{genre}</span>
        ))}
      </div>
    </div>
  </section>
</Base>

<style>
  .about h1 {
    font-size: 2rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
  }

  .divider {
    width: 60px;
    height: 1px;
    background: var(--border);
    margin: 2rem 0;
  }

  .content {
    max-width: 560px;
  }

  .content p {
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
    line-height: 1.8;
  }

  .content p :global(a) {
    color: var(--fg);
  }

  .content h2 {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--accent);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .genres {
    display: flex;
    flex-wrap: wrap;
    gap: 0.6rem;
  }

  .genre {
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    padding: 0.25rem 0.6rem;
    border: 1px solid var(--border);
    color: var(--accent);
  }
</style>
