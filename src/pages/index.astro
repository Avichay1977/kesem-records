---
import Base from '../layouts/Base.astro';
import home from '../data/home.json';
---

<Base title="Kesem Records">
  <section class="hero">
    <h1 data-editable data-file="home" data-path="hero.title">{home.hero.title}</h1>
    <p class="tagline" data-editable data-file="home" data-path="hero.tagline">{home.hero.tagline}</p>
    <div class="divider"></div>
    <p class="intro" data-editable data-file="home" data-path="hero.intro">
      {home.hero.intro}
    </p>
  </section>

  <section class="featured">
    <h2 data-editable data-file="home" data-path="selectedWork.sectionTitle">{home.selectedWork.sectionTitle}</h2>
    <ul class="work-list">
      {home.selectedWork.items.map((item, i) => (
        <li>
          <span class="work-title" data-editable data-file="home" data-path={`selectedWork.items[${i}].title`}>{item.title}</span>
          <span class="work-desc" data-editable data-file="home" data-path={`selectedWork.items[${i}].description`}>{item.description}</span>
        </li>
      ))}
    </ul>
    <a href={home.selectedWork.seeAllLink} class="see-all">{home.selectedWork.seeAllText} &rarr;</a>
  </section>

  <section class="philosophy">
    <blockquote data-editable data-file="home" data-path="philosophyQuote">
      "{home.philosophyQuote}"
    </blockquote>
  </section>
</Base>

<style>
  .hero {
    padding: 2rem 0 3rem;
  }

  .hero h1 {
    font-size: 2.4rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .tagline {
    color: var(--accent);
    font-size: 0.9rem;
    letter-spacing: 0.06em;
    text-transform: lowercase;
  }

  .divider {
    width: 60px;
    height: 1px;
    background: var(--border);
    margin: 2rem 0;
  }

  .intro {
    font-size: 1rem;
    max-width: 520px;
    line-height: 1.8;
  }

  .featured {
    padding: 2rem 0;
    border-top: 1px solid var(--border);
  }

  .featured h2 {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 1.5rem;
    color: var(--accent);
  }

  .work-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
  }

  .work-list li {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    padding-bottom: 1.2rem;
    border-bottom: 1px solid var(--border);
  }

  .work-list li:last-child {
    border-bottom: none;
  }

  .work-title {
    font-size: 1.05rem;
  }

  .work-desc {
    font-size: 0.8rem;
    color: var(--accent);
    letter-spacing: 0.03em;
  }

  .see-all {
    display: inline-block;
    margin-top: 1.5rem;
    font-size: 0.8rem;
    text-transform: lowercase;
    letter-spacing: 0.05em;
  }

  .philosophy {
    padding: 3rem 0;
    border-top: 1px solid var(--border);
  }

  blockquote {
    font-size: 1.1rem;
    font-style: normal;
    color: var(--accent);
    padding-left: 1.5rem;
    border-left: 2px solid var(--border);
    line-height: 1.8;
  }

  @media (max-width: 480px) {
    .hero h1 {
      font-size: 1.6rem;
    }
  }
</style>
