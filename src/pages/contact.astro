---
import Base from '../layouts/Base.astro';
import Icon from '../components/Icon.astro';
import contact from '../data/contact.json';
import settings from '../data/settings.json';
---

<Base title="Contact | Kesem Records">
  <section class="contact">
    <h1 data-editable data-file="contact" data-path="pageTitle">{contact.pageTitle}</h1>
    <div class="divider"></div>

    <div class="content">
      <p class="lead" data-editable data-file="contact" data-path="leadText">
        {contact.leadText}
      </p>

      <div class="cta-block">
        <h2 data-editable data-file="contact" data-path="ctaTitle">{contact.ctaTitle}</h2>
        <a href={`mailto:${contact.email}`} class="email-cta" data-editable data-file="contact" data-path="email">{contact.email}</a>
      </div>

      <div class="guide-block">
        <h2 data-editable data-file="contact" data-path="guideTitle">{contact.guideTitle}</h2>
        <ul class="guide-list">
          {contact.guideItems.map((item, i) => (
            <li>
              <span class="guide-label" data-editable data-file="contact" data-path={`guideItems[${i}].label`}>{item.label}</span>
              <span class="guide-desc" data-editable data-file="contact" data-path={`guideItems[${i}].description`}>{item.description}</span>
            </li>
          ))}
        </ul>
      </div>

      <div class="links-section">
        <div class="icon-links">
          {settings.social.map((s) => (
            <a href={s.url} target="_blank" rel="noopener noreferrer" title={s.title}><Icon name={s.name} /></a>
          ))}
        </div>
      </div>
    </div>

    <div class="closing">
      <p data-editable data-file="contact" data-path="closingText">{contact.closingText}</p>
    </div>
  </section>
</Base>

<style>
  .contact h1 {
    font-size: 2rem;
    letter-spacing: 0.08em;
  }

  .divider {
    width: 60px;
    height: 1px;
    background: var(--border);
    margin: 2rem 0;
  }

  .content {
    max-width: 480px;
  }

  .lead {
    font-size: 0.95rem;
    line-height: 1.8;
    margin-bottom: 3rem;
  }

  .cta-block {
    margin-bottom: 3rem;
  }

  .cta-block h2 {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--accent);
    margin-bottom: 0.75rem;
  }

  .email-cta {
    font-size: 1.25rem;
    letter-spacing: 0.03em;
    border-bottom-width: 2px;
    padding-bottom: 2px;
  }

  .guide-block {
    margin-bottom: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .guide-block h2 {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--accent);
    margin-bottom: 1.25rem;
  }

  .guide-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .guide-label {
    display: block;
    font-size: 0.85rem;
    letter-spacing: 0.04em;
    margin-bottom: 0.15rem;
  }

  .guide-desc {
    display: block;
    font-size: 0.8rem;
    color: var(--accent);
    line-height: 1.6;
  }

  .links-section {
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .icon-links {
    display: flex;
    gap: 1.8rem;
    align-items: center;
  }

  .icon-links a {
    color: var(--fg);
    opacity: 0.5;
    transition: opacity 0.2s;
  }

  .icon-links a:hover {
    opacity: 1;
  }

  .closing {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  .closing p {
    font-size: 0.8rem;
    color: var(--accent);
    letter-spacing: 0.06em;
  }

  :global([data-theme="commodore"]) .email-cta {
    font-size: 0.8rem;
  }

  @media (max-width: 480px) {
    .email-cta {
      font-size: 1.05rem;
    }

    .guide-list {
      gap: 1.25rem;
    }
  }
</style>
