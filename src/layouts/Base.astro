---
import settings from '../data/settings.json';

interface Props {
  title?: string;
  description?: string;
}

const { title = settings.siteTitle, description = settings.siteDescription } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <header class="header">
      <nav>
        <a href="/" class="logo" data-editable data-file="settings" data-path="nav.logoText">{settings.nav.logoText}</a>
        <div class="nav-links">
          {settings.nav.links.map((link) => (
            <a href={link.url}>{link.label}</a>
          ))}
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="footer">
      <p data-editable data-file="settings" data-path="footer.text">&copy; {new Date().getFullYear()} {settings.footer.text}</p>
    </footer>

    <button class="theme-toggle" id="themeToggle" aria-label="Switch theme">
      C64
    </button>

    <script is:inline>
      (function() {
        const saved = localStorage.getItem('theme');
        if (saved === 'commodore') {
          document.documentElement.setAttribute('data-theme', 'commodore');
        }

        document.addEventListener('DOMContentLoaded', function() {
          const btn = document.getElementById('themeToggle');
          function updateLabel() {
            const current = document.documentElement.getAttribute('data-theme');
            btn.textContent = current === 'commodore' ? 'B&W' : 'C64';
          }
          updateLabel();

          btn.addEventListener('click', function() {
            const current = document.documentElement.getAttribute('data-theme');
            if (current === 'commodore') {
              document.documentElement.removeAttribute('data-theme');
              localStorage.setItem('theme', 'typewriter');
            } else {
              document.documentElement.setAttribute('data-theme', 'commodore');
              localStorage.setItem('theme', 'commodore');
            }
            updateLabel();
          });
        });
      })();
    </script>
    <script src="/scripts/inline-editor.js" defer></script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

<style>
  .header {
    padding: 2rem 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  nav {
    max-width: var(--max-width);
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: baseline;
  }

  .logo {
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    border-bottom: none;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a {
    font-size: 0.85rem;
    text-transform: lowercase;
    letter-spacing: 0.08em;
  }

  main {
    flex: 1;
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 3rem 1.5rem;
    width: 100%;
  }

  .footer {
    padding: 2rem 1.5rem;
    border-top: 1px solid var(--border);
    text-align: center;
    font-size: 0.75rem;
    color: var(--accent);
    letter-spacing: 0.05em;
  }

  @media (max-width: 480px) {
    .header {
      padding: 1.5rem 1rem;
    }

    nav {
      flex-direction: column;
      gap: 1rem;
    }

    main {
      padding: 2rem 1rem;
    }
  }
</style>
