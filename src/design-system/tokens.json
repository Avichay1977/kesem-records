{
  "brand": "Kesem Records",
  "version": "1.0.0",
  "attributes": ["minimal", "bold", "monochrome", "typewriter", "retro"],

  "color": {
    "theme-typewriter": {
      "primary": {
        "50":  "#fafafa",
        "100": "#f5f5f5",
        "200": "#e5e5e5",
        "300": "#d4d4d4",
        "400": "#a3a3a3",
        "500": "#737373",
        "600": "#525252",
        "700": "#404040",
        "800": "#262626",
        "900": "#171717",
        "950": "#0a0a0a"
      },
      "background": "#ffffff",
      "foreground": "#111111",
      "accent": "#555555",
      "border": "#cccccc",
      "selection-bg": "#111111",
      "selection-fg": "#ffffff"
    },
    "theme-typewriter-dark": {
      "background": "#0a0a0a",
      "foreground": "#e8e8e8",
      "accent": "#aaaaaa",
      "border": "#333333",
      "selection-bg": "#e8e8e8",
      "selection-fg": "#0a0a0a"
    },
    "theme-commodore": {
      "background": "#33bb33",
      "foreground": "#0a2e0a",
      "accent": "#145214",
      "border": "#1a661a",
      "glow": "rgba(10, 46, 10, 0.3)",
      "hover": "#000000",
      "button-bg": "#0a2e0a",
      "button-fg": "#33bb33",
      "selection-bg": "#0a2e0a",
      "selection-fg": "#33bb33"
    },
    "semantic": {
      "success": "#22c55e",
      "warning": "#eab308",
      "error": "#ef4444",
      "info": "#3b82f6",
      "link": "inherit",
      "link-hover": "inherit"
    }
  },

  "typography": {
    "font-families": {
      "typewriter": {
        "name": "Special Elite",
        "fallback": "'Courier New', monospace",
        "source": "Google Fonts",
        "url": "https://fonts.googleapis.com/css2?family=Special+Elite&display=swap",
        "usage": "Default theme - all text"
      },
      "pixel": {
        "name": "Press Start 2P",
        "fallback": "monospace",
        "source": "Google Fonts",
        "url": "https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap",
        "usage": "Commodore theme - all text"
      }
    },
    "scale": {
      "display-xl": { "size": "3rem",    "line-height": 1.1, "weight": 400, "letter-spacing": "0.12em", "usage": "Hero headlines" },
      "display":    { "size": "2.25rem", "line-height": 1.2, "weight": 400, "letter-spacing": "0.10em", "usage": "Page titles" },
      "h1":         { "size": "2rem",    "line-height": 1.3, "weight": 400, "letter-spacing": "0.12em", "usage": "Section headers" },
      "h2":         { "size": "1.25rem", "line-height": 1.4, "weight": 400, "letter-spacing": "0.06em", "usage": "Sub-headers" },
      "h3":         { "size": "1.1rem",  "line-height": 1.4, "weight": 400, "letter-spacing": "0.03em", "usage": "Card titles" },
      "body":       { "size": "0.95rem", "line-height": 1.8, "weight": 400, "letter-spacing": "0.02em", "usage": "Body text" },
      "body-sm":    { "size": "0.88rem", "line-height": 1.7, "weight": 400, "letter-spacing": "0.02em", "usage": "Secondary text" },
      "caption":    { "size": "0.75rem", "line-height": 1.5, "weight": 400, "letter-spacing": "0.05em", "usage": "Captions, footer" },
      "micro":      { "size": "0.65rem", "line-height": 1.4, "weight": 400, "letter-spacing": "0.12em", "usage": "Tags, labels" }
    },
    "commodore-scale-factor": 0.6,
    "text-transform": {
      "headings": "uppercase",
      "nav": "lowercase",
      "tags": "uppercase",
      "labels": "uppercase"
    }
  },

  "spacing": {
    "base": 8,
    "unit": "px",
    "scale": {
      "0":  "0px",
      "1":  "4px",
      "2":  "8px",
      "3":  "12px",
      "4":  "16px",
      "5":  "20px",
      "6":  "24px",
      "8":  "32px",
      "10": "40px",
      "12": "48px",
      "16": "64px",
      "20": "80px",
      "24": "96px"
    },
    "layout": {
      "page-padding": "24px",
      "page-padding-mobile": "16px",
      "section-gap": "56px",
      "header-padding": "32px 24px",
      "footer-padding": "32px 24px",
      "card-padding": "28px 0",
      "nav-gap": "24px",
      "divider-margin": "32px 0"
    }
  },

  "layout": {
    "max-width": "720px",
    "breakpoints": {
      "mobile":  "480px",
      "tablet":  "768px",
      "desktop": "1024px",
      "wide":    "1280px"
    },
    "grid": {
      "columns": 12,
      "gutter": "24px",
      "margin": "24px"
    }
  },

  "components": {
    "nav": {
      "logo": { "font-size": "1.1rem", "text-transform": "uppercase", "letter-spacing": "0.15em", "border": "none" },
      "link": { "font-size": "0.85rem", "text-transform": "lowercase", "letter-spacing": "0.08em" },
      "link-hover": { "border-color": "var(--fg)" }
    },
    "divider": {
      "width": "60px",
      "height": "1px",
      "color": "var(--border)"
    },
    "card-project": {
      "padding": "32px 0",
      "border-bottom": "1px solid var(--border)",
      "title": { "font-size": "1.1rem" },
      "year": { "font-size": "0.75rem", "color": "var(--accent)" },
      "description": { "font-size": "0.88rem", "color": "var(--accent)", "max-width": "520px" }
    },
    "tag": {
      "font-size": "0.65rem",
      "text-transform": "uppercase",
      "letter-spacing": "0.12em",
      "padding": "4px 10px",
      "border": "1px solid var(--border)",
      "color": "var(--accent)"
    },
    "player-embed": {
      "border": "1px solid var(--border)",
      "padding": "3px",
      "max-width": "560px",
      "height": "200px"
    },
    "credit-block": {
      "padding": "28px 0",
      "border-bottom": "1px solid var(--border)",
      "grid": "1fr 1fr",
      "grid-mobile": "1fr"
    },
    "button-theme-toggle": {
      "position": "fixed",
      "bottom": "1.2rem",
      "right": "1.2rem",
      "z-index": 10000,
      "padding": "8px 11px",
      "font-size": "0.55rem",
      "text-transform": "uppercase",
      "border": "2px solid var(--border)",
      "background": "var(--fg)",
      "color": "var(--bg)"
    },
    "link": {
      "default": { "border-bottom": "1px solid var(--border)", "text-decoration": "none" },
      "hover": { "border-bottom-color": "var(--fg)" },
      "active": { "border-bottom-color": "var(--fg)" },
      "visited": { "color": "var(--accent)" },
      "focus": { "outline": "2px solid var(--fg)", "outline-offset": "2px" }
    },
    "section-header": {
      "font-size": "0.8rem",
      "text-transform": "uppercase",
      "letter-spacing": "0.15em",
      "color": "var(--accent)",
      "padding-bottom": "8px",
      "border-bottom": "1px solid var(--border)"
    },
    "contact-block": {
      "label": { "font-size": "0.75rem", "text-transform": "uppercase", "letter-spacing": "0.15em", "color": "var(--accent)" },
      "value": { "font-size": "0.95rem" }
    },
    "footer": {
      "font-size": "0.75rem",
      "color": "var(--accent)",
      "letter-spacing": "0.05em",
      "text-align": "center",
      "border-top": "1px solid var(--border)"
    },
    "error-404": {
      "code": { "font-size": "4rem", "letter-spacing": "0.2em" },
      "message": { "font-size": "0.95rem", "color": "var(--accent)" },
      "link": { "font-size": "0.85rem" }
    },
    "scanline-overlay": {
      "position": "fixed",
      "pointer-events": "none",
      "z-index": 9999,
      "background": "var(--scanlines)"
    },
    "blinking-cursor": {
      "content": "\\2588",
      "animation": "blink 1s step-end infinite"
    }
  },

  "animation": {
    "easing": {
      "default": "ease",
      "smooth": "cubic-bezier(0.4, 0, 0.2, 1)",
      "spring": "cubic-bezier(0.34, 1.56, 0.64, 1)",
      "step": "step-end"
    },
    "duration": {
      "instant": "0ms",
      "fast": "150ms",
      "normal": "200ms",
      "slow": "300ms",
      "blink": "1000ms"
    },
    "keyframes": {
      "blink": { "50%": { "opacity": 0 } }
    },
    "guidelines": [
      "Use transitions sparingly - this is a minimal brand",
      "border-color transitions: 200ms ease",
      "theme-toggle hover: scale(1.05) 300ms ease",
      "Commodore cursor blink: 1s step-end infinite",
      "No decorative animations - motion serves function only"
    ]
  },

  "accessibility": {
    "standard": "WCAG 2.1 AA",
    "contrast": {
      "typewriter-light": { "fg-bg": "17.4:1", "accent-bg": "5.6:1", "status": "AAA" },
      "typewriter-dark": { "fg-bg": "16.7:1", "accent-bg": "7.5:1", "status": "AAA" },
      "commodore": { "fg-bg": "8.2:1", "accent-bg": "4.6:1", "status": "AA" }
    },
    "requirements": [
      "All interactive elements must have visible focus states",
      "Minimum touch target: 44x44px on mobile",
      "Skip-to-content link on all pages",
      "Alt text on all images",
      "aria-label on icon-only buttons (theme toggle)",
      "Semantic HTML: header, nav, main, footer, section",
      "Keyboard navigable: all links and buttons reachable via Tab",
      "prefers-reduced-motion: disable blink animation",
      "prefers-color-scheme: auto dark mode in typewriter theme",
      "lang attribute on html element"
    ]
  }
}
